{#
A config file for iptables, the Linux firewall.
Set to an empty list in non-router mode, or basic NAT rules in router mode.
-#}
{% set output_path = '/etc/iptables/rules.v4' %}
{% set service_reload = 'systemctl reload-or-restart netfilter-persistent' %}
# Generated by total-perspective-vortex
*nat
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
{% if lan_ip == lan_router %}
# The bare minimum of firewall rules to enable NAT routing.
-A POSTROUTING -o {{ lan_interface }} -j MASQUERADE
-A POSTROUTING -o {{ wan_interface }} -j MASQUERADE
{% endif %}
COMMIT
